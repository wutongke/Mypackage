<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.NewPersonActivity" >

    <TextView
        android:id="@+id/newpersontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#ff5656"
        android:text="新增联系人" />
    <TextView
        android:id="@+id/personnametitle"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/newpersontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="姓        名" />
    <TextView
        android:id="@+id/personnametitle1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/newpersontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="姓        名" />
    <EditText 
        android:id="@+id/personname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personnametitle"
        android:layout_alignTop="@+id/personnametitle"
        android:textSize="15sp"
        android:singleLine="true"
        android:hint="联系人姓名"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/personmobilenumtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/personnametitle"
        android:textSize="20sp"
        android:text="手        机" />
    <EditText 
        android:id="@+id/personmobilenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:singleLine="true"
        android:inputType="number"
        android:hint="11位手机号码"
        android:layout_toRightOf="@+id/personnametitle"
        android:layout_alignTop="@+id/personmobilenumtitle"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/personlocatetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/personmobilenumtitle"
        android:textSize="20sp"
        android:text="详细地址" />
    <EditText 
        android:id="@+id/personlocate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/personnametitle"
        android:layout_alignTop="@+id/personlocatetitle"
        android:layout_marginLeft="10dp"
        />
    <RadioGroup 
	    android:id="@+id/persontypebtn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="left"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="15dp"
	    android:background="#ffffff"
	    android:orientation="horizontal"
	    android:layout_below="@+id/personlocatetitle"
	    >
	    <RadioButton 
	        android:id="@+id/sendtype"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="寄件人"
	        android:padding="10dp"
	       	android:layout_gravity="left"
	        android:textSize="15dp"
	        android:checked="true"
	        />
	    <RadioButton 
	        android:id="@+id/receivetype"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="收件人"
	        android:padding="10dp"
	        android:layout_gravity="right"
	        android:textSize="15dp"
	        />
	</RadioGroup>
	<Button 
	    android:id="@+id/savepersoninfo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/persontypebtn"
	    android:layout_marginTop="20dp"
	    android:background="#ff5656"
	    android:text="保            存"
	    android:textSize="25sp"
	    />
</RelativeLayout>
