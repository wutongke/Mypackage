<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.LoginActivity" >

    <TextView
        android:id="@+id/nametitlelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="用户账号"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/namelogin"
        android:layout_width="@dimen/name_edit"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nametitlelogin"
        android:layout_toRightOf="@+id/nametitlelogin" />

    <TextView
        android:id="@+id/pwdtitlelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametitlelogin"
        android:layout_marginTop="10dp"
        android:text="密       码"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pwdlogin"
        android:layout_width="@dimen/name_edit"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pwdtitlelogin"
        android:layout_toRightOf="@+id/pwdtitlelogin" />

    <Button
        android:id="@+id/joinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="登录"
        android:textSize="30dp" />

</RelativeLayout>