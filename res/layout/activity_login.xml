<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.LoginActivity" >

    
    <TextView
        android:id="@+id/nametitlelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="用户账号"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/namelogin"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nametitlelogin"
        android:layout_toRightOf="@+id/nametitlelogin" 
        android:singleLine="true"
        android:hint="手机号"
        />

    <TextView
        android:id="@+id/pwdtitlelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametitlelogin"
        android:layout_marginTop="20dp"
        android:text="密      码"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pwdlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_alignBottom="@+id/pwdtitlelogin"
        android:layout_alignLeft="@+id/namelogin"
        android:singleLine="true"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/loginbutton"
        android:layout_below="@+id/pwdtitlelogin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="#ff5656"
        android:text="登录"
        android:textSize="30dp" />

</RelativeLayout>