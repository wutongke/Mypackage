<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007f00"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.SendActivity" >

    <TextView
        android:id="@+id/confirmorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认订单"
        android:layout_marginTop="20dp"
        android:background="#6B8E23"
        android:padding="8dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/getgoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin"
        android:background="#71C671"
        android:padding="8dp"
        android:text="取快递"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin"
        android:background="#6B8E23"
        android:padding="8dp"
        android:text="自助快递验证"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/orderfinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin"
        android:background="#71C671"
        android:padding="8dp"
        android:text="完成订单"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/orderforother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin"
        android:background="#6B8E23"
        android:padding="8dp"
        android:text="申请售后"
        android:textSize="20sp" />

</LinearLayout>