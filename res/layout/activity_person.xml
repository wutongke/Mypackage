<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007f00"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.PersonActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/persontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息" 
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/modifyinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/persontitle"
            android:layout_alignBottom="@+id/persontitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="修改"
             />
        <TextView
            android:id="@+id/personnametitle"
            android:layout_below="@+id/persontitle"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名: " 
            android:textSize="20sp"
            />
        <TextView 
            android:id="@+id/personname"
            android:layout_toRightOf="@+id/personnametitle"
            android:layout_alignTop="@+id/personnametitle"
            android:layout_alignBottom="@+id/personnametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/personphonetitle"
            android:layout_below="@+id/personnametitle"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话: " 
            android:textSize="20sp"
            />
        <TextView 
            android:id="@+id/personphone"
            android:layout_toRightOf="@+id/personphonetitle"
            android:layout_alignTop="@+id/personphonetitle"
            android:layout_alignBottom="@+id/personphonetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </RelativeLayout>
    
    <TextView
            android:id="@+id/contacttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="联系人信息" 
            android:textSize="30sp"
            />
    <Button 
        android:id="@+id/contactinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址簿"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="contactInfo"
        />
	
</LinearLayout>