<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff7f00"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiangxm.checkpackage.SendActivity" >

   

        <TextView
            android:id="@+id/newDing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="新建快递信息"
            android:padding="10dp"
            android:background="#CD8500"
            android:textSize="20sp" 
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ordermore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_gravity="center_horizontal"
            android:text="运单详情"
            android:padding="10dp"
            android:background="#CD8500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ordertrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_gravity="center_horizontal"
            android:text="订单跟踪"
            android:padding="10dp"
            android:background="#CD8500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ordersendconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_gravity="center_horizontal"
            android:text="发货确认"
            android:padding="10dp"
            android:background="#CD8500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ordercommenttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="#00EE00"
            android:text="评价反馈"
            android:textSize="20sp" />
        <EditText 
            android:id="@+id/ordercomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/item_margin"
            android:singleLine="false"
            />
    	<Button 
    	    android:id="@+id/commentsubmit"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="提交评论"
    	    android:textSize="20sp"
    	    android:textColor="#00EE00"
    	    android:layout_marginLeft="30dp"
    	    />

</LinearLayout>